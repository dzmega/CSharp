<Application x:Class="WpfAppPizza.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfAppPizza"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="myTextBlock" TargetType="TextBlock">
            <Setter Property="Margin" Value="10,10,15,5"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
        </Style>
        <Style x:Key="myCombo" TargetType="ComboBox">
            <Setter Property="Height" Value="50"></Setter>
        </Style>
    </Application.Resources>
</Application>
